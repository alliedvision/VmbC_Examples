{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "win64",
      "inherits": "win64-template",
      "environment": {
        "QT_PATH": "C:/Qt_5_15_x64_Windows",
        "VMB_API_PATH": "${sourceDir}/VmbAPI"
      },
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": {
          "type": "PATH",
          "value": "$env{QT_PATH};$env{VMB_API_PATH}"
        }
      }
    },
    {
      "name": "linux64",
      "inherits": "linux64-template",
      "displayName": "Linux 64 Release Config",
      "description": "Linux 64 Release Config",
      "environment": {
        "QT_PATH": "/data/Qt_5_15_Install",
        "VMB_API_PATH": "${sourceDir}/VmbAPI"
      },
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": {
          "type": "PATH",
          "value": "$env{QT_PATH};$env{VMB_API_PATH}"
        }
      }
    },
    {
      "name": "linux64-debug",
      "inherits": ["linux64-debug-template", "linux64"],
      "displayName": "Linux 64 Debug Config",
      "description": "Linux 64 Debug Config"
    },
    {
      "name": "arm64",
      "inherits": "arm64-template",
      "displayName": "Linux ARM64 Release Config",
      "description": "Linux ARM64 Release Config",
      "cacheVariables": {
        "CMAKE_MODULE_PATH": {
          "type": "PATH",
          "value": "${sourceDir}/VmbAPI/CMake"
        },
        "CMAKE_PREFIX_PATH": {
          "type": "PATH",
          "value": "/data/Qt_5_15_Install_arm64"
        }
      }
    },
    {
      "name": "arm64-debug",
      "inherits": ["arm64-debug-template", "arm64"],
      "displayName": "Linux ARM64 Debug Config",
      "description": "Linux ARM64 Debug Config"
    },
    {
      "name": "macos-vs-template",
      "hidden": true,
      "inherits": "macos-template",
      // VS delivered CMake is broken. Replace it with: 
      //      rm -rf ~/.vs/cmake/bin && ln -s /Applications/CMake.app/Contents/bin ~/.vs/cmake/bin
      "binaryDir": "$env{HOME}/.vs/$ms{projectDirName}/build/${presetName}",
      "environment": {
        // "VERBOSE":  "1"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
          "intelliSenseMode": "clang-x64",
          "copySourcesOptions": {
            "exclusionList": [ ".vs", "build" ]
          }
        }
      }
    },
    {
      "name": "macos",
      "inherits": "macos-vs-template",
      "displayName": "macOS Release",
      "cacheVariables": {
        "Boost_DIR": { "type": "PATH", "value": "$env{HOME}/boost_1_78_0/macOS-arm64-dynamic/lib/cmake/Boost-1.78.0" }
      }
    },
    {
      "name": "macos-debug",
      "inherits": "macos",
      "displayName": "macOS Debug",
      "generator": "Xcode",
      "environment": {
        //"VERBOSE":  "1"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {"type": "STRING", "value": "Debug" }
      }
    },
  ],
  
  "buildPresets": [
    {
      "name": "build-template",
      "hidden": true,
      "jobs": 8
    },
    {
      "name": "win64",
      "inherits": "build-template",
      "configurePreset": "win64",
      "configuration": "Release"
    },
    {
      "name": "win64-debug",
      "inherits": "win64",
      "configuration": "Debug"      
    },
    {
      "name": "linux64",
      "inherits": "build-template",
      "configurePreset": "linux64"
    },
    {
      "name": "linux64-debug",
      "inherits": "build-template",
      "configurePreset": "linux64-debug"
    },
    {
      "name": "arm64",
      "inherits": "build-template",
      "configurePreset": "arm64"
    },
    {
      "name": "arm64-debug",
      "inherits": "build-template",
      "configurePreset": "arm64-debug"
    },
    {
      "name": "macos",
      "displayName": "macOS Release Build",
      "configurePreset": "macos",
      "jobs": 20     
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug Build",
      "configurePreset": "macos-debug",
      "jobs": 20
    }
  ]
}